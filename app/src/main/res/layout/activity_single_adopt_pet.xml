<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleAdoptPetActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/SAP_IMG_dog"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/SAP_LBL_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="Selected Pet" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/SAP_LBL_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="400dp"
        android:maxLines="1"
        android:minLines="1"
        android:text="Sex: "
        android:textSize="20sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/SAP_LBL_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="450dp"
        android:maxLines="1"
        android:minLines="1"
        android:text="Size: "
        android:textSize="20sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/SAP_LBL_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="500dp"
        android:maxLines="1"
        android:minLines="1"
        android:text="Color: "
        android:textSize="20sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/SAP_LBL_aggressive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="550dp"
        android:maxLines="1"
        android:minLines="1"
        android:text="Aggressive: "
        android:textSize="20sp" />

    <Button
        android:id="@+id/SAP_BTN_adopt_pet"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="600dp"
        android:layout_marginStart="130dp"
        android:text="Adopt animal"
        tools:ignore="BottomAppBar" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SAP_FAB_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/yellow_500"
        android:src="@drawable/ic_icon_left_arrow"
        android:contentDescription="return to menu" />

</RelativeLayout>