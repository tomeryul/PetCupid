<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleMyPetActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/SMP_IMG_dog"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/SMP_LBL_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="Selected Pet" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/SMP_LBL_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="420dp"
        android:maxLines="1"
        android:minLines="1"
        android:text="Name: "
        android:textSize="20sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/SMP_LBL_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="480dp"
        android:maxLines="1"
        android:minLines="1"
        android:text="Time in: "
        android:textSize="20sp" />


    <Button
        android:id="@+id/SMP_BTN_take_out"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="550dp"
        android:text="Take Out"
        android:textColor="@color/black"
        tools:ignore="BottomAppBar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SMP_FAB_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/yellow_500"
        android:src="@drawable/ic_icon_left_arrow"
        android:contentDescription="return to menu" />

</RelativeLayout>